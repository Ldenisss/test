extends ../base
block head
    title index page
block content 
    .container.container__greetings
        .greetings__authorization
            a(href="http://").authorization__btn 
                .btn__name Авторизоваться
        .greetings__main
            .greetings__content
                .greetings__logo
                        img.greetings__logo--img(src="../source/pages/index/images/my-photo.png", alt="my-photo")
                .greetings__name Лепин Денис
                .greetings__title Личный сайт веб разработчика
                .greetings__social 
                    ul.social__list
                        li.social__item
                            a(href="http://")
                                svg
                                    use(xlink:href=" ")
                        li.social__item
                            a(href="http://")
                                svg
                                    use(xlink:href=" ")
                        li.social__item
                            a(href="http://")
                                svg
                                    use(xlink:href=" ")
                .greetings__menu
                    ul.menu__list   
                        li.menu__item(style="width: 45%")
                            a.menu__item-link(href="./work.html") Мои работы 
                        li.menu__item(style="width: 35%") 
                            a.menu__item-link(href="./about.html") Обо мне 
                        li.menu__item(style="width: 20%") 
                            a.menu__item-link(href="./blog.html") Блог 
            .greetings__authorization-content 
                .authorization-content__title Авторизуйтесь
                form.authorization-content__form(action="get")
                    .authorization-content__login
                        label(for="login").authorization-content__login
                            .authorization-content__login-logo
                                img.authorization-content__login-img(src="../source/pages/index/images/img-form.png", alt="")
                            input.authorization-content__input(type="text", name="login", placeholder="Логин")
                    .authorization-content__password.authorization-content__login
                        label(for="password").authorization-content__login
                            .authorization-content__password-logo
                                img.authorization-content-password-img(src="../source/pages/index/images/img-form.png", alt="")
                            input.authorization-content__input(type="text", name="password", placeholder="Пароль")
                    .authorization-content__checkbox  
                            input(type="checkbox", id="checkbox") 
                            label(for="checkbox") 
                            .form__desc Я человек
                    .form__desc Вы точно не робот ?
                    .authorization-content__radio 
                            
                            input(type="radio", value="1" name="answer" id="yes")
                            label(for="yes")
                            .form__desc Да
                            
                            input(type="radio", name="answer" value="0" id="no") 
                            label(for="no")
                            .form__desc  Не уверен
                    .authorization-content__menu
                        ul.authorization-content__menu-list
                            li.authorization-content__menu-item(style="width: 50%")
                                a.authorization-content__menu-link-home(href="http://") На главную
                            li.authorization-content__menu-item(style="width: 50%")
                                label(for="submit")
                                    input.authorization-content__menu-link-open(type="submit", name="submit")
                                    

        .greetings__author Лепин Денис | создано с любовью в LoftSchool | 2018         
            